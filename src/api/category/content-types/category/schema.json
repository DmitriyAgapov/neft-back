{
  "kind": "collectionType",
  "collectionName": "categories",
  "info": {
    "singularName": "category",
    "pluralName": "categories",
    "displayName": "Категории"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string"
    },
    "short_dedcription": {
      "type": "blocks"
    },
    "description": {
      "type": "blocks"
    },
    "category": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "image": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "child_categories": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::category.category",
      "mappedBy": "category_parent"
    },
    "category_parent": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::category.category",
      "inversedBy": "child_categories"
    },
    "product_hydraulics": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::product-hydraulic.product-hydraulic",
      "mappedBy": "category"
    },
    "seo": {
      "type": "component",
      "component": "shared.seo",
      "repeatable": false,
      "required": true
    },
    "order": {
      "type": "integer",
      "required": true,
      "default": 0
    }
  }
}
